{
    "repositoryUrl": "https://github.com/superbet-group/opensearch-connector-for-apache-kafka",
    "branches": [
        { "name": "main" },
        { "name": "beta", "channel": "beta" },
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        ["@semantic-release/github", {
            "assets": [
                {"path": "target/build/distributions/*.zip"},
                {"path": "target/build/distributions/*.tar"},
            ]
        }],
        ["@semantic-release/exec", {
            "prepareCmd": "./gradlew distTar distZip"
        }]
    ]
}
